<h1>Edit a post</h1>

<form action="/post/{{post._id}}/edit" method="POST">
  <textarea name="text" maxlength="140" placeholder="Insert text">{{ post.text }}</textarea>
  {{!-- <input name="text" value={{post.text}} /> --}}
  <button>Publish</button>
</form>

<form action="/post/{{post._id}}/delete" method="POST">
  <button>Delete</button>
</form>
